#include <string>
#include <stdexcept>
#include <iostream>

class Palindrome
{
public:
    static bool isPalindrome(const std::string& word)
    {
    	std::string::size_type i=0;
    	while(i <(word.size()/2))
    	{
    		if(std::toupper(word[i])!=std::toupper(word[word.size()-(i+1)]))
    		{
    			return false;
    		}
    	}
return true;
        throw std::logic_error("Waiting to be implemented");
    }
};

#ifndef RunTests
