class playinfo:public Task
{
	int min;
	int sec;
public:
	playinfo():min(0),sec(0){
		setPrio(1);
	}
	void setPaytime(const int m, const int s)
	{
		min = m;
		sec = s;
	}
	void getPaytime(int &m, int &s)
	{
		m = min;
		s = sec;
	}

};
class playMeta:public Task
{
	string album;
public:
	playMeta():album(""){
		setPrio(2);
	}
	void setmeta(const string& s)
	{
		album = s;
	}
	string setmeta(const string& s)
	{
		return album;
	}

};
